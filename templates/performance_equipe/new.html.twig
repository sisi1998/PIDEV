{% extends 'base.html.twig' %}

{% block title %}New PerformanceEquipe{% endblock %}

{% block body %}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin
    ="anonymous">
   
<div class="content col-10 mx-auto">
<center>
<div class="container-fluid pt-4 px-4">
                <div class="row g-4">
                    <div class="col-sm-12 col-xl-6">
                        <div class="bg-light rounded h-100 p-4">
 <center>                         
<h1>Create new PerformanceEquipe</h1> </center>
    

{{ form_start(form,{attr:{novalidate:'novalidate'}}) }} 
    <div class="mb-3">
        <label  class="form-label">victoires</label>
        {{form_widget(form.victoires ,{'attr':{class: 'form-control'}})}}
        {{form_errors(form.victoires ,{'attr':{class: 'text-danger'}})}}
    </div>
    <div class="mb-3">
        <label  class="form-label">defaites</label>
        {{form_widget(form.defaites ,{'attr':{class: 'form-control'}})}}
        {{form_errors(form.defaites ,{'attr':{class: 'text-danger'}})}}
    
 <div class="mb-3">
        <label  class="form-label">nuls</label>
        {{form_widget(form.nuls,{'attr':{class: 'form-control'}})}}
        {{form_errors(form.nuls ,{'attr':{class: 'text-danger'}})}}
    </div>
    
     <div class="mb-3">
        <label  class="form-label">but_marque</label>
        {{form_widget(form.but_marque,{'attr':{class: 'form-control'}})}}
        {{form_errors(form.but_marque ,{'attr':{class: 'text-danger'}})}}
    </div>
     <div class="mb-3">
        <label  class="form-label">but_encaisses</label>
        {{form_widget(form.but_encaisses,{'attr':{class: 'form-control'}})}}
        {{form_errors(form.but_encaisses ,{'attr':{class: 'text-danger'}})}}
    </div>
   
    
<button type="submit" class="btn btn-primary">Ajouter</button>

{{ form_end(form) }}
    {{ include('performance_equipe/_form.html.twig') }}

    <a href="{{ path('app_performance_equipe_index') }}">back to list</a>
{% endblock %}
