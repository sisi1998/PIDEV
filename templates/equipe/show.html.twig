{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/star_rating/js/star-rating.js') }}"></script>
{% endblock %}
{% block title %}Equipe{% endblock %}

{% block body %}
    <h1>Equipe</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ equipe.id }}</td>
            </tr>
            <tr>
                <th>Nom_equipe</th>
                <td>{{ equipe.nomEquipe }}</td>
            </tr>
            <tr>
                <th>Nb_joueurs</th>
                <td>{{ equipe.nbJoueurs }}</td>
            </tr>
            <tr>
