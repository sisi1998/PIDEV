{% extends 'base_back.html.twig' %}

{% block title %}New Equipe{% endblock %}

{% block body %}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin
    ="anonymous">
   
<div class="content col-10 mx-auto">
<center>
<div class="container-fluid pt-4 px-4">
                <div class="row g-4">
                    <div class="col-sm-12 col-xl-6">
                        <div class="bg-light rounded h-100 p-4">
 <center>                         
<h3 class="mb-4">Ajouter une Equipe</h3>
</center>
 {{ form_start(form,{attr:{novalidate:'novalidate'}}) }}
    <div class="mb-3">
        <label  class="form-label">nom_equipe</label>
        {{form_widget(form.nom_equipe ,{'attr':{class: 'form-control'}})}}
        {{form_errors(form.nom_equipe ,{'attr':{class: 'text-danger'}})}}
    </div>
    <div class="mb-3">
        <label  class="form-label">nb_joueurs</label>
        {{form_widget(form.nb_joueurs ,{'attr':{class: 'form-control'}})}}
        {{form_errors(form.nb_joueurs ,{'attr':{class: 'text-danger'}})}}
    
 <div class="mb-3">
        <label  class="form-label">origine</label>
        {{form_widget(form.origine,{'attr':{class: 'form-control'}})}}
        {{form_errors(form.origine ,{'attr':{class: 'text-danger'}})}}
    </div>
    
    <div class="mb-3">
        <label for="formFile" class="form-label">logo</label>
        {{form_widget(form.logo ,{'attr':{ type: 'file', class: 'form-control'}})}}
    </div>
   
    
<button type="submit" class="btn btn-primary">Ajouter</button>

{{ form_end(form) }}

</center></div>
{% endblock %}
