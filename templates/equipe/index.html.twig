{% extends 'base.html.twig' %}

{% block body %}
<section id ="Equipe"></section>
    <h1>Equipe index</h1>

    <table border="3"class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom_equipe</th>
                <th>Nb_joueurs</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for equipe in equipes %}
            <tr>
                <td>{{ equipe.id }}</td>
                <td>{{ equipe.nomEquipe }}</td>
                <td>{{ equipe.nbJoueurs }}</td>
                <td>
                    <a href="{{ path('app_equipe_show', {'id': equipe.id}) }}">show</a>
